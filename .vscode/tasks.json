{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    // These Python project tasks assume you have installed and configured: 
    // build, wheel, black, pylint, pytest, pytest-cov, Sphinx, sphinx-rtd-theme
    // Use the Update Toolchain task to install the necessary packages.
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install Dependencies",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pip",
                "install",
                "--group",
                "deploy",
            ],
            "problemMatcher": []
        },
        {
            "label": "Run Local Version",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pygpsclient",
                "--ntripcasteruser",
                "semuadmin",
                "--ntripcasterpassword",
                "testpassword",
                "--verbosity",
                "3"
            ],
            "options": {
                "cwd": "src"
            },
            "problemMatcher": []
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rfvd",
                "build",
                "dist",
                "htmlcov",
                "docs/_build",
                "${config:modulename}.egg-info"
            ],
            "windows": {
                "command": "Get-ChildItem",
                "args": [
                    "-Path",
                    "build\\,",
                    "dist\\,",
                    "docs\\_build,",
                    "${config:modulename}.egg-info",
                    "-Recurse",
                    "|",
                    "Remove-Item",
                    "-Recurse",
                    "-Confirm:$false",
                    "-Force"
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Sort Imports",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "isort",
                "src",
                "--jobs",
                "-1"
            ],
            "problemMatcher": []
        },
        {
            "label": "Format",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "black",
                "src"
            ],
            "problemMatcher": []
        },
        {
            "label": "Pylint",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pylint",
                "src"
            ],
            "problemMatcher": []
        },
        {
            "label": "Security",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "bandit",
                "-c",
                "pyproject.toml",
                "-r",
                "--exit-zero",
                "."
            ],
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "build",
                ".",
                "--wheel",
                "--sdist"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Test",
            "type": "process",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pytest"
            ],
            "problemMatcher": []
        },
        {
            "label": "Sphinx",
            "type": "process",
            "command": "sphinx-apidoc",
            "args": [
                "--ext-autodoc",
                "--ext-viewcode",
                "--templatedir=docs",
                "-f",
                "-o",
                "docs",
                "src/${config:modulename}"
            ],
            "problemMatcher": []
        },
        {
            "label": "Sphinx HTML",
            "type": "process",
            "command": "/usr/bin/make",
            "windows": {
                "command": "${workspaceFolder}/docs/make.bat"
            },
            "args": [
                "html"
            ],
            "options": {
                "cwd": "${workspaceFolder}/docs"
            },
            "dependsOrder": "sequence",
            "dependsOn": [
                "Sphinx"
            ],
            "problemMatcher": []
        },
        {
            "label": "Sphinx Deploy to S3",
            "type": "process",
            "command": "aws",
            "args": [
                "s3",
                "cp",
                "${workspaceFolder}/docs/_build/html",
                "s3://www.semuconsulting.com/${config:modulename}/",
                "--recursive"
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "Sphinx HTML"
            ],
            "problemMatcher": []
        },
        {
            "label": "Install Wheel",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pip",
                "install",
                "--user",
                "--force-reinstall",
                "*.whl"
            ],
            "options": {
                "cwd": "dist"
            },
            "problemMatcher": []
        },
        {
            "label": "Install Locally",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pip",
                "install",
                //"--user",
                "--force-reinstall",
                "*.whl"
            ],
            "dependsOrder": "sequence",
            "dependsOn": [
                "Clean",
                "Security",
                "Sort Imports",
                "Format",
                "Pylint",
                "Test",
                "Build",
                "Sphinx HTML"
            ],
            "options": {
                "cwd": "dist"
            },
            "problemMatcher": []
        }
    ]
}